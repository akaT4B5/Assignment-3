<%- include('../partials/header') %>

<div class="sessions-page-container">

    <div class="sessions-left-column">
        <h2>Sessions</h2>
        
        <a href="/sessions/add" class="card" id="add-session-btn">
            Add Session
        </a>
    </div>

    <div class="sessions-right-column">
        
        <div class="scrollable-table-container">
            <table class="session-table">
                <thead>
                    <tr>
                        <th>Exercise</th>
                        <th>Reps</th>
                        <th>Weight (lbs)</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (workouts.length > 0) { %>
                        <% workouts.forEach(workout => { %>
                            <tr>
                                <td><%= workout.exerciseName %></td>
                                <td><%= workout.reps %></td>
                                <td><%= workout.weight %></td>
                                <td><%= new Date(workout.date).toLocaleDateString() %></td>
                                <td>
                                    <a href="/sessions/edit/<%= workout._id %>" class="btn-edit">Edit</a>
                                    <a href="/sessions/delete/<%= workout._id %>" classm="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5">No workout sessions found. Add one!</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div> </div> </div> <%- include('../partials/footer') %>